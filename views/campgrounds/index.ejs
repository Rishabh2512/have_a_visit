<%- include("../partials/header") %>


<div class="container">
	<header class="jumbotron">
		<h1>
		Welcome To Have_a_Visit
		</h1>
		<p>
			Add and View Your Hand picked Visit To Allahabad!
		</p>
		<p>
			<a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new Visit</a>
		</p>
	</header>
	
	<div class="row" style"display:flex; flex-wrap:wrap;">
		<% campgrounds.forEach(function(campgrounds){ %>
		<div class="col-lg-3 col-md-4 col-sm-6">
			<div class="thumbnail">
			 <img src="<%= campgrounds.image %>" >
			 <div class="caption">
				<h4><%= campgrounds.name %></h4>
			 </div>
			 <p>
				<!-- <a href="/campgrounds/:id" class="btn btn_primary">Show Info</a>  -->
				<a class="btn btn-info" href="/campgrounds/<%= campgrounds._id %>" role="button">More Info</a>
			 </p>
			</div>
			</div>
		<% }) %>
	</div>
	<a href="/campgrounds" style="margin: 100px auto">Go Back</a>

	
</div>

<%- include("../partials/footer") %>